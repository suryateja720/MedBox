<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.medbox">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/med_box_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/med_box_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".users.distributor.entries.NewInwardActivity"
            android:theme="@style/NewCompanyActivityTheme"
            />
        <activity
            android:name=".authentication.ForgotPasswordActivity"
            android:theme="@style/LoginActivityTheme" />
        <activity
            android:name=".users.distributor.entries.NewEmployeeActivity"
            android:theme="@style/NewCompanyActivityTheme" />
        <activity
            android:name=".users.distributor.entries.NewProductActivity"
            android:theme="@style/NewCompanyActivityTheme" />
        <activity
            android:name=".users.distributor.entries.NewCompanyActivity"
            android:theme="@style/NewCompanyActivityTheme" />
        <activity
            android:name=".launcher.UserDashboardActivity"
            android:label="@string/title_activity_user_dashboard"
            android:theme="@style/UserDashboardActivityTheme" />
        <activity
            android:name=".authentication.RegisterActivity"
            android:theme="@style/RegisterActivityTheme" />
        <activity
            android:name=".authentication.LoginActivity"
            android:theme="@style/LoginActivityTheme" />
        <activity
            android:name=".launcher.NoInternetAlertActivity"
            android:theme="@style/NoInternetAlertActivityTheme" />
        <activity
            android:name=".launcher.SplashActivity"
            android:theme="@style/SplashActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>